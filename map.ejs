<%
var data = json;
%>
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8">
    <title>gulp-map</title>
</head>
<style media="screen">
  *{
    margin: 0;
    padding: 0;
  }
  input[type="button"] {
  	-webkit-appearance: none;
  	-moz-appearance: none;
  	appearance: none;
  }
  .m-header {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    border-bottom:  1px solid #888;
    min-height: 100px;
  }
  .m-header__logo {
    margin: 10px;
  }
  .m-header__caption {
    margin: 10px;
    text-align: right;
    font-size: .75em;
  }

  .m-sortable__item {
    display: flex;
    flex-direction: row;
    align-items: center;

    padding: 15px 0 15px 20px;
    border-bottom: 1px solid #ddd;
    list-style: none;
  }
  .m-sortable__item:nth-child(odd) {
    background-color: #f9f9f9;
  }

  .m-sortable__list {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 0 0 0 2%;
    width: 100%;
  }
  input[type="checkbox"]:checked + .m-sortable__list,
  input[type="checkbox"]:checked + .m-sortable__list a{
    color: #ddd;
    text-decoration: none;
    pointer-events: none;
  }
  .c-title{
    width: 35%;
    font-size: 1em;
    text-decoration: none;
  }
  .c-title a{
    color: #555;
    text-decoration: none;
  }
  .c-url{
    font-size: .75em;
  }
  .c-btn {
    margin: 10px 0 0;
    padding: 5px 10px;
    border: none;
    border-radius: 30px;
    font-size: 1em;
    color: #fff;
    background-color: #3461fc;
    cursor: pointer;
  }
  @media screen and (max-width: 40em) {
    .c-title{
      width: 100%;
    }
    .m-header {
      display: flex;
      flex-direction: column;
    }
    .m-sortable__list {
      flex-direction: column;
      align-items: flex-start;
    }
    .m-header__caption {
      text-align: center;
    }
  }
</style>

<body>
  <main class="l-wrapper">
    <header class="m-header">
      <div class="m-header__logo">
        <h1 class="c-logo">gulp-map</h1>
      </div>
      <div class="m-header__caption">
        <p>This page is generated by gulp-map</p>
        <p id="file">Number of links:</p>
        <input type="button" value="Reset checkbox" id="reset" class="c-btn">
      </div>
    </header>

    <ul class="sortable m-sortable">
      <% for (var i in data) { %>
        <li class="m-sortable__item">
          <input type="checkbox">
          <div class="m-sortable__list">
            <h2 class="c-title"><a href="<%- data[i][0] %>" target="_blank"><%- data[i][1] %></a></h2>
            <p class="c-url"><a href="<%- data[i][0] %>" target="_blank"><%- data[i][0] %></a></p>
          </div>
        </li>
      <% } %>
    </ul>
  </main>

  <script
  src="https://code.jquery.com/jquery-2.2.4.min.js"
  integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="
  crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>
  <script>
    $("#file").append($(".m-sortable__list").length);
    $(".sortable").sortable();
    $("#reset").on("click",function(){
      $('input[type="checkbox"]').prop("checked", false);
    });
  </script>

</body>
</html>
